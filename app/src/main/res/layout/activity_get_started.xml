<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboarding_bg"
    android:fitsSystemWindows="true"
    tools:context=".activity.GetStartedActivity">


    <Button
        android:id="@+id/btn_signup"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/drawable_bg_button"
        android:fontFamily="@font/teko_medium"
        android:text="@string/signup"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_16sdp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/drawable_bg_button"
        android:fontFamily="@font/teko_medium"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_16sdp" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_logo"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/new_logo" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gif_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_45sdp">

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_quote"
            android:layout_alignTop="@+id/txt_quote"
            android:layout_alignRight="@+id/txt_quote"
            android:layout_alignBottom="@+id/txt_quote"
            android:alpha="0.1"
            android:background="@drawable/drawable_splash_quote_bg" />

        <TextView
            android:id="@+id/txt_quote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="@string/quote"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_11sdp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_bottom_moon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-370dp"
        android:src="@drawable/bottom_moon" />
</RelativeLayout>