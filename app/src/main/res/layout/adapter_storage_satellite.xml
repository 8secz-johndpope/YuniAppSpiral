<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/layout_satellite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/view_hor"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:background="@android:color/white"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_satellite"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_toRightOf="@+id/view_hor"
            android:src="@drawable/satellite_storage" />

        <TextView
            android:id="@+id/txt_satellite_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@+id/img_satellite"
            android:text="Planet Name"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/_10sdp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10sdp" />
    </RelativeLayout>

    <View
        android:id="@+id/view_ver"
        android:layout_width="0.5dp"
        android:layout_height="@dimen/_13sdp"
        android:layout_below="@+id/layout_satellite"
        android:layout_marginLeft="@dimen/_28sdp"
        android:background="@android:color/white" />
</RelativeLayout>