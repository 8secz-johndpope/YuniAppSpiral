<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/img_notch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/layout_popup"
        android:layout_marginRight="@dimen/_12sdp"
        android:src="@drawable/notch_icon" />

    <RelativeLayout
        android:id="@+id/layout_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_notch"
        android:background="@drawable/bg_date_time_popup"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingRight="@dimen/_15sdp"

        android:paddingBottom="@dimen/_5sdp">

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/teko_medium"
            android:text="Feb 22, 2019"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_date"
            android:layout_centerHorizontal="true"
            android:text="02:19 PM"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_10sdp" />

    </RelativeLayout>

</RelativeLayout>