<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_bg_bottom_fragment">


    <TextView
        android:id="@+id/txt_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:fontFamily="@font/teko_medium"
        android:padding="@dimen/_10sdp"
        android:text="Save"
        android:textColor="#2ECC71"
        android:textSize="@dimen/_15sdp" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txt_save"
        android:scrollbars="vertical"
        android:layout_above="@+id/img_add_planet"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/teko_medium"
                android:hint="Planet Name"
                android:inputType="text|textCapWords"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_15sdp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/teko_medium"
                android:text="Description"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_10sdp" />

            <EditText
                android:id="@+id/edt_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description will be shown here"
                android:textColor="@color/txt_color_normal"
                android:textSize="@dimen/_12sdp"
                android:inputType="textCapSentences|textMultiLine"
                android:minLines="4"
                android:maxLines="4"
                android:gravity="left|top"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/teko_medium"
                android:text="Start Date"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_10sdp" />


            <EditText
                android:id="@+id/edt_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border_default"
                android:drawableRight="@drawable/calendar_grey_icon"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text="Sep 15, 1994"
                android:textColor="@color/txt_color_normal"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/teko_medium"
                android:text="Finish date"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_10sdp" />


            <EditText
                android:id="@+id/edt_finish_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border_default"
                android:drawableRight="@drawable/calendar_grey_icon"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text="Feb 28, 2019"
                android:textColor="@color/txt_color_normal"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/_12sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/teko_medium"
                android:text="Set Alarm Date"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_10sdp" />


            <EditText
                android:id="@+id/edt_alarm_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border_default"
                android:drawableRight="@drawable/calendar_grey_icon"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text="Jan 15, 2019"
                android:textColor="@color/txt_color_normal"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/teko_medium"
                android:text="Set Alaram Time"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_10sdp" />


            <EditText
                android:id="@+id/edt_alarm_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border_default"
                android:drawableRight="@drawable/clock_icon"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text="09:40 PM"
                android:textColor="@color/txt_color_normal"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/teko_medium"
                android:text="Add Member"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_10sdp" />


            <EditText
                android:id="@+id/edt_add_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border_default"
                android:drawableRight="@drawable/user_icon"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text="Select from contact list"
                android:textColor="@color/txt_color_normal"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/_12sdp" />


            <TextView
                android:id="@+id/txt_access_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableRight="@drawable/chevron_icon"
                android:fontFamily="@font/teko_medium"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="@string/notes"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/teko_medium"
                android:text="Pririty"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_10sdp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_add_priority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add_priority_icon" />

                <SeekBar
                    android:id="@+id/seekbar_priority"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_toLeftOf="@+id/img_less_priority"
                    android:layout_toRightOf="@+id/img_add_priority" />


                <ImageView
                    android:id="@+id/img_less_priority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/less_priority_icon" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/teko_medium"
                android:text="Documents"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pdf_icon" />

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/doc_icon" />

            </LinearLayout>

            <!--<ImageView
                android:id="@+id/img_add_planet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
               android:padding="@dimen/_10sdp"
                android:src="@drawable/add_moon" />-->
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <ImageView
        android:id="@+id/img_add_planet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/add_moon" />
</RelativeLayout>